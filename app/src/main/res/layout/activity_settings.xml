<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/BackButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="settingsMain"
        android:text="Back" />

    <ToggleButton
        android:id="@+id/toggleNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/BackButton"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="26dp"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/togglelocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/toggleNotifications"
        android:layout_below="@+id/toggleNotifications"
        android:layout_marginTop="45dp"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/toggledistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/togglelocation"
        android:layout_below="@+id/togglelocation"
        android:layout_marginTop="46dp"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleNotifications"
        android:layout_alignBottom="@+id/toggleNotifications"
        android:layout_toEndOf="@+id/BackButton"
        android:text="Notifications"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/togglelocation"
        android:layout_marginTop="11dp"
        android:text="Location"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggledistance"
        android:layout_alignBottom="@+id/toggledistance"
        android:layout_alignStart="@+id/textView2"
        android:text="Factor Distance"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggledistance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Radius Distance"
        android:textSize="18sp" />

    <Button
        android:id="@+id/SaveSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="settingsMain"
        android:text="Save Settings" />
</RelativeLayout>
